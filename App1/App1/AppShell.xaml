<?xml version="1.0" encoding="UTF-8"?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms" 
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:App1.Views"
       Title="App1"
       x:Class="App1.AppShell">

    <FlyoutItem Title="LoadingPage" Shell.FlyoutItemIsVisible="False"
             Shell.NavBarHasShadow="False" Shell.NavBarIsVisible="False" Icon="icon_about.png">
        <ShellContent Route="LoadingPage" ContentTemplate="{DataTemplate local:LoadingPage}" />
    </FlyoutItem>



    <FlyoutItem Title="Authorization" Shell.FlyoutItemIsVisible="False"
             Shell.NavBarHasShadow="False" Shell.NavBarIsVisible="False" Icon="icon_about.png">
        <ShellContent Route="Authorization" ContentTemplate="{DataTemplate local:Authorization}" />
    </FlyoutItem>

    <FlyoutItem Title="Registration" Shell.FlyoutItemIsVisible="False"
             Shell.NavBarHasShadow="False" Icon="icon_about.png">
        <ShellContent Route="Registration" ContentTemplate="{DataTemplate local:Registration}" />
    </FlyoutItem>

    <FlyoutItem Title="NotePage" IsVisible="True" Icon="icon_about.png">
        <ShellContent Route="NotePage" ContentTemplate="{DataTemplate local:NotePage}" />
    </FlyoutItem>

</Shell>
